<%- include('partials/header') %>

<h1>Home</h1>
<p><%- homeStartCont %></p>
<% posts.forEach(function(post) { %>
    <h1><%= post.newPostTitle %></h1>
    <% if (post.newPostBody.length > 100) { %>
        <p> <%= post.newPostBody.substring(0, 100) + "..." %> <a href=<%- "/posts/"+ post.newPostTitle.replace(/ /g, '-').toLowerCase() %>>Read More</a> </p>
    <% } else { %>
        <%= post.newPostBody %>
    <% } %>
<% }) %>
<%- include('partials/footer') %>